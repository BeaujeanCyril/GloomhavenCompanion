@using Radzen.Blazor

<div class="d-flex flex-column align-items-center justify-content-center h-20">
	<h1 class="display-6 m-0" style="white-space: nowrap;">Round @Round</h1>
	@*     <MudButton Color="Color.Dark" @onclick="NextRound" Size="Size.Large" Style="font-size: 2rem; min-width: 60px; height: 60px;">
	+
	</MudButton> *@
	<Radzen.Blazor.RadzenButton IconColor="Color.Dark"
															Click="NextRound"
															Style="font-size: 2rem; min-width: 60px; height: 60px; background-color: transparent; color: inherit; border: none;">
		+
	</Radzen.Blazor.RadzenButton>
</div>


@code {
	[Parameter]
	public int Round { get; set; }

	[Parameter]
	public EventCallback OnNextRound { get; set; }

	private async Task NextRound()
	{
		await OnNextRound.InvokeAsync();
	}
}

<style>
	.my-button {
		width: 100%;
		height: 80px; /* Ajuster la hauteur pour le confort tactile */
		font-size: 1.5rem; /* Augmenter la taille du texte */
	}

	.round-component {
		background-color: #f5f5f5; /* Couleur de fond */
		border: 2px solid #007bff; /* Couleur de bordure */
		border-radius: 12px; /* Coins arrondis */
		padding: 20px; /* Espacement interne */
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Ombre */
		transition: background-color 0.3s ease; /* Transition pour l'effet hover */
	}

		.round-component:hover {
			background-color: #e7f0ff; /* Changement de couleur au survol */
		}

</style>